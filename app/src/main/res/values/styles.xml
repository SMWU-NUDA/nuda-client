<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--TextView-->
    <!--툴바 제목-->
    <style name="TextToolbar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!--회원가입 제목-->
    <style name="TextRegisterTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!--프로필 항목 이름 -->
    <style name="TextProfileField">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!--유효성 검사-->
    <style name="TextIsValid">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray3</item>
    </style>

    <!--설문 질문 텍스트-->
    <style name="TextSurveyQuestion">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_marginTop">-3dp</item>
        <item name="android:layout_marginLeft">11dp</item>
        <item name="android:breakStrategy">simple</item>
        <item name="android:hyphenationFrequency">none</item>
    </style>

    <!--상품 카드 텍스트-->
    <!--상품 브랜드-->
    <style name="TextProductBrand">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:layout_marginLeft">12dp</item>
    </style>
    <!--상품 이름-->
    <style name="TextProductName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
    <!--상품 성분-->
    <style name="TextProductIngredient">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>
    <!--상품 별점, 리뷰-->
    <style name="TextProductStarandReview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/gray3</item>
    </style>
    <!--상품 가격-->
    <style name="TextProductPrice">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray2</item>
    </style>

    <!--네비게이션 메뉴 텍스트-->
    <style name="TextNavText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_extralight</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/bottom_nav_color</item>
        <item name="android:duplicateParentState">true</item>
    </style>

    <!-- 마이페이지 소제목 텍스트 -->
    <style name="TextMypageSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!-- 마이페이지 기본 텍스트 -->
    <style name="TextMypageBasic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!--Secondary_green 텍스트-->
    <style name="TextSecondaryGreen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_green</item>
        <item name="android:background">@drawable/btn_secondary_green</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <!--키워드 설정 - 키워드 이름 텍스트(Secondary_default 텍스트)-->
    <style name="TextSecondaryDefault">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray2</item>
        <item name="android:background">@drawable/btn_secondary_default</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--Secondary_block 텍스트-->
    <style name="TextSecondaryblock">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray4</item>
        <item name="android:background">@drawable/btn_secondary_block</item>
        <item name="android:paddingVertical">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <!--키워드 설정 텍스트(회색)-->
    <style name="keyword_setting_gray">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_extralight</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>

   <!--키워드 설정 텍스트(그린)-->
    <style name="keyword_setting_green">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/main</item>
    </style>

    <!--성분-->
    <!--성분 위험도-->
    <style name="TextIngredient_riskLevel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">18dp</item>
    </style>

    <!--성분 구성요소-->
    <style name="TextIngredient_componentName">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray1</item>
    </style>

    <!--성분 구성요소 개수-->
    <style name="TextIngredient_componentCount">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/pretendard_extralight</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray3</item>
    </style>

    <!--성분 분류-->
    <style name="TextIngredient_classification">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>

    <!--EditText-->
    <!--기본 입력창(디폴트)-->
    <style name="EditTextInput">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginRight">9dp</item>
        <item name="android:background">@drawable/et_input_default</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!--검색창-->
    <style name="EditTextSearchbar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:background">@drawable/et_searchbar</item>
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

<!--ImageView-->
    <!--이미지뷰 버튼-->
    <style name="ImageBtn">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">7dp</item>
    </style>

    <!--설문 동그라미 circle-->
    <style name="ImageCircle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/img_circle</item>
        <item name="android:layout_marginTop">40dp</item>
    </style>

    <!--상품 카드 이미지-->
    <style name="ImageProduct">
        <item name="android:layout_width">90dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:background">@drawable/img_product</item>
    </style>

    <!--네비게이션 메뉴 아이콘-->
    <style name="ImageNavIcon">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:tint">@color/bottom_nav_color</item>
    </style>

<!--Button-->
    <!-- Primary 버튼 -->
    <style name="BtnPrimary">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray6</item>
        <item name="android:background">@drawable/btn_primary</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>

    </style>

    <!--유효성 검사(확인) 버튼-->
    <style name="BtnCheck">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray6</item>
        <item name="android:background">@drawable/btn_check</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- 다음 페이지 이동 / 회원가입 버튼-->
    <style name="BtnNextPage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray6</item>
        <item name="android:background">@drawable/btn_next_page</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!-- 이전 페이지 이동 버튼-->
    <style name="BtnPrevPage">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/btn_prev_page</item>
        <item name="android:background">@drawable/btn_prev_page</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>


    <!--설문 응답 버튼(라디오버튼)-->
    <style name="BtnSurveyAnswer">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/pretendard_semibold</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_survey_btn</item>
        <item name="android:background">@drawable/btn_survey_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginRight">14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!--프로필 수정 버튼(계정정보 수정, 배송정보 수정)-->
    <style name="BtnEditProfile">
        <item name="android:layout_width">85dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/gray3</item>
        <item name="android:background">@drawable/btn_edit_profile</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
    </style>

    <!--제품 랭킹 필터링 라디오 버튼-->
    <style name="RadioBtn_Filter">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/pretendard_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/gray1</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>



    <!--RadioGroup-->
    <!--설문 응답 라디오 그룹-->
