<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/secondary_light_lime_20"/>
            <stroke
                android:color="@color/text_green"
                android:width="1dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:color="@color/gray5"
                android:width="1dp"/>
            <corners
                android:radius="5dp"/>
        </shape>
    </item>
</selector>