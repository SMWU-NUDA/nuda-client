<?xml version="1.0" encoding="utf-8"?>
  <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.review.ReviewCreateActivity">

    <!--툴바 배치-->
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />


    <ScrollView
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/toolBar"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="@id/guideline_start"
    app:layout_constraintEnd_toEndOf="@id/guideline_end">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
            <!--검색바 섹션-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >
                <TextView
                    android:id="@+id/tv_search_product"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/search_review"
                    android:fontFamily="@font/pretendard_medium"
                    android:textSize="18sp"
                    android:textColor="@color/gray1"
                    android:layout_marginTop="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <!--검색바-->
                <EditText
                    android:id="@+id/et_searchbar"
                    android:layout_width="match_parent"
                    style="@style/EditTextSearchbar"
                    android:text="@string/searchbar"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="0dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_search_product"
                    />

                <!--검색 아이콘-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ImageBtn"
                    android:src="@drawable/img_search"
                    android:layout_marginRight="12dp"
                    app:layout_constraintEnd_toEndOf="@id/et_searchbar"
                    app:layout_constraintTop_toTopOf="@id/et_searchbar"
                    app:layout_constraintBottom_toBottomOf="@id/et_searchbar"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--아이템 카드-->
            <include
                android:id="@+id/item_product_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_product_card"
                android:layout_marginTop="28dp"
                android:visibility="visible"
                />

            <!--리뷰 입력 영역-->
            <LinearLayout
                android:id="@+id/ll_review_input_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray5"
                    android:layout_marginTop="26dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_about_this_product"
                    android:fontFamily="@font/pretendard_semibold"
                    android:textSize="24sp"
                    android:textColor="@color/gray1"
                    android:layout_marginTop="27dp"
                    android:layout_gravity="center_horizontal"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/input_rating"
                    android:fontFamily="@font/pretendard_light"
                    android:textSize="14sp"
                    android:textColor="@color/gray3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    />

                <!--별점-->
                <RatingBar
                    android:id="@+id/rating_bar"
                    style="@style/CustomRatingBar24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/gray5"
                    android:layout_marginTop="17dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="bottom"
                    android:layout_marginTop="28dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_review"
                        android:fontFamily="@font/pretendard_semibold"
                        android:textSize="18sp"
                        android:textColor="@color/gray1"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_review2"
                        android:fontFamily="@font/pretendard_light"
                        android:textSize="14sp"
                        android:textColor="@color/gray3"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>

                <!--상세 리뷰 입력창-->
                <EditText
                    android:id="@+id/et_review_detail"
                    android:layout_width="match_parent"
                    android:layout_height="175dp"
                    android:background="@drawable/bg_my_review_card"
                    android:layout_marginTop="25dp"
                    android:inputType="textMultiLine"
                    android:scrollbars="vertical"
                    android:gravity="top|start"
                    android:fontFamily="@font/pretendard_light"
                    android:textColor="@color/gray3"
                    android:textSize="14sp"
                    android:padding="12dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="28dp"
                    android:gravity="bottom">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/input_photo"
                        android:fontFamily="@font/pretendard_medium"
                        android:textSize="16sp"
                        android:textColor="@color/gray1"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/input_photo2"
                        android:fontFamily="@font/pretendard_light"
                        android:textSize="14sp"
                        android:textColor="@color/gray3"
                        android:layout_marginLeft="5dp"
                        />
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_addProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/ImageBtn"
                    android:padding="0dp"
                    android:src="@drawable/img_add_product"
                    android:layout_marginTop="10dp"
                    />

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/BtnPrimary"
                    android:text="@string/create_review"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="40dp"
                    android:paddingVertical="12dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginBottom="30dp"
                    android:minHeight="0dp"
                    android:minWidth="0dp"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!--가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />



</androidx.constraintlayout.widget.ConstraintLayout>