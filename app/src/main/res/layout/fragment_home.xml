<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.home.HomeFragment">

    <!--로고 이미지-->
    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:src="@drawable/img_logo"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintTop_toTopOf="parent"/>

    <!--버튼들-->
    <!--검색 버튼-->
    <ImageView
        android:id="@+id/iv_btn_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/img_toolbar_search"
        app:layout_constraintEnd_toStartOf="@id/iv_btn_cart"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="3.5dp"
        />
    <!--장바구니 버튼-->
    <ImageView
        android:id="@+id/iv_btn_cart"
        android:layout_width="20dp"
        android:layout_height="22dp"
        android:src="@drawable/img_toolbar_basket"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toTopOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"
        />

    <!--본문-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <!--랭킹 카드 ViewPager2-->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager2"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingHorizontal="50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <!--전체 제품 랭킹 보기 텍스트 -->
            <TextView
                android:id="@+id/tv_go_to_ranking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/go_to_ranking_page"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="@color/gray1"
                android:drawableEnd="@drawable/img_right_arrow"
                android:drawablePadding="4dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                app:layout_constraintTop_toBottomOf="@id/viewPager2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!--키워드 AI 맞춤 추천 상품 리스트 컨테이너-->

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@id/guideline_start2"
                app:layout_constraintTop_toBottomOf="@id/tv_go_to_ranking">

                <include layout="@layout/item_home_product_list" />

                <include layout="@layout/item_home_product_list" />

                <include layout="@layout/item_home_product_list" />
            </LinearLayout>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_start2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1"
                />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />

</androidx.constraintlayout.widget.ConstraintLayout>