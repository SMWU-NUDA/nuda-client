<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.navigation.NavigationActivity">

    <!--Fragment Container-->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_navi"
        />

    <!--그림자 View-->
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow_bottom_nav"
        app:layout_constraintBottom_toTopOf="@id/guideline_navi"
    />

    <!--BottomNavigation-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/guideline_navi"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <!--홈-->
        <LinearLayout
            android:id="@+id/menu_home"
            style="@style/linearNavMenu">
            <ImageView
                style="@style/ImageNavIcon"
                android:src="@drawable/img_home"
                android:contentDescription="@string/home" />
            <TextView
                style="@style/TextNavText"
                android:text="@string/home"/>
        </LinearLayout>

        <!--맞춤추천-->
        <LinearLayout
            android:id="@+id/menu_recommend"
            style="@style/linearNavMenu"
            >
            <ImageView
                style="@style/ImageNavIcon"
                android:src="@drawable/img_recommend"
                android:contentDescription="@string/recommend" />
            <TextView
                style="@style/TextNavText"
                android:text="@string/recommend"/>
        </LinearLayout>

        <!--관심-->
        <LinearLayout
            android:id="@+id/menu_wishlist"
            style="@style/linearNavMenu"
            >
            <ImageView
                style="@style/ImageNavIcon"
                android:src="@drawable/img_heart"
                android:contentDescription="@string/wishlist" />
            <TextView
                style="@style/TextNavText"
                android:text="@string/wishlist"/>
        </LinearLayout>

        <!--마이-->
        <LinearLayout
            android:id="@+id/menu_mypage"
            style="@style/linearNavMenu"
            >
            <ImageView
                style="@style/ImageNavIcon"
                android:src="@drawable/img_mypage"
                android:contentDescription="@string/mypage" />
            <TextView
                style="@style/TextNavText"
                android:text="@string/my"/>
        </LinearLayout>
    </LinearLayout>


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9" />

</androidx.constraintlayout.widget.ConstraintLayout>