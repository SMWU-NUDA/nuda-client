<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.review.ReviewAllActivity">

    <!--툴바 배치-->
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width ="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_review_ai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingHorizontal="25dp"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_starAndReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/line1"
            app:layout_constraintBottom_toBottomOf="@id/line1"
            app:layout_constraintStart_toStartOf="parent"
            >
            <ImageView
                android:id="@+id/iv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_star_review"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                />

            <!--별점 텍스트-->
            <TextView
                android:id="@+id/tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.2"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="24sp"
                android:textColor="@color/gray1"
                app:layout_constraintStart_toEndOf="@id/iv_star"
                app:layout_constraintTop_toTopOf="@id/iv_star"
                app:layout_constraintBottom_toBottomOf="@id/iv_star"
                />

            <!--리뷰 수-->
            <TextView
                android:id="@+id/tv_reviewCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(417)"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="18sp"
                android:textColor="@color/gray2"
                android:layout_marginBottom="85dp"
                app:layout_constraintTop_toBottomOf="@id/iv_star"
                app:layout_constraintStart_toStartOf="@id/iv_star"
                app:layout_constraintEnd_toEndOf="@id/tv_star"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="0.5dp"
            android:layout_height="0dp"
            android:background="@color/gray4"
            android:layout_marginLeft="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_starAndReview"
            />

        <!--긍정 키워드-->
        <ImageView
            android:id="@+id/iv_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_positive"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="25dp"
            app:layout_constraintStart_toEndOf="@id/line1"
            app:layout_constraintTop_toTopOf="parent"
            />
        <!--긍정 리뷰 분석 키워드 항목들 (동적 추가)-->
        <LinearLayout
            android:id="@+id/ll_positive_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="11dp"
            app:layout_constraintStart_toEndOf="@id/iv_positive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_positive"
            >
            <include
                layout="@layout/item_review_keywords"/>
            <include
                layout="@layout/item_review_keywords"/>
            <include
                layout="@layout/item_review_keywords"/>
        </LinearLayout>
        <!--부정 키워드-->
        <ImageView
            android:id="@+id/iv_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_negative"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/iv_positive"
            app:layout_constraintTop_toBottomOf="@id/ll_positive_items"
            />
        <!--부정 리뷰 분석 키워드 항목들 (동적 추가)-->
        <LinearLayout
            android:id="@+id/ll_negative_items"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="11dp"
            app:layout_constraintStart_toEndOf="@id/iv_negative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_negative"
                >
            <include
                layout="@layout/item_review_keywords"/>
            <include
                layout="@layout/item_review_keywords"/>
            <include
                layout="@layout/item_review_keywords"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_writeReview"
        android:layout_width="0dp"
        android:layout_height="40dp"
        style="@style/BtnPrimary"
        android:text="@string/write_review"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/cl_review_ai"
        />

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/gray5"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/btn_writeReview"
        />

    <!--키워드 필터링-->
    <HorizontalScrollView
        android:id="@+id/hsv_filiter_keyword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line2"
        >
        <LinearLayout
            android:id="@+id/ll_filiter_keyword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <!--필터링 조건 고정-->
            <TextView
                android:id="@+id/tv_filiter_all"
                style="@style/BtnSecondary"
                android:text="@string/keyword_filter_all"
                />
            <TextView
                android:id="@+id/tv_filiter_irritationLevel"
                style="@style/BtnSecondary"
                android:text="@string/keyword_irritationLevel"
                />
            <TextView
                android:id="@+id/tv_filiter_flow"
                style="@style/BtnSecondary"
                android:text="@string/keyword_flow"
                />
            <TextView
                android:id="@+id/tv_filiter_safety"
                style="@style/BtnSecondary"
                android:text="@string/keyword_safety"
                />
            <TextView
                android:id="@+id/tv_filiter_adhesion"
                style="@style/BtnSecondary"
                android:text="@string/keyword_adhesion"
                />
            <TextView
                android:id="@+id/tv_filiter_scent"
                style="@style/BtnSecondary"
                android:text="@string/keyword_scent"
                />
        </LinearLayout>
    </HorizontalScrollView>

    <!--전체 리뷰 리사이클러뷰 / 무한 스크롤-->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/hsv_filiter_keyword"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <!--가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.1"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.9"
        />



</androidx.constraintlayout.widget.ConstraintLayout>