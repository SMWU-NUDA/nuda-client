<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="34dp">

    <!--프로필 이미지-->
    <ImageView
        android:id="@+id/iv_profile"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:background="@drawable/img_product_round"
        android:src="@drawable/image_product"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--닉네임-->
    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="눈송이"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="16sp"
        android:textColor="@color/gray1"
        android:layout_marginTop="1dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintStart_toEndOf="@id/iv_profile"
        app:layout_constraintTop_toTopOf="@id/iv_profile"
        />

    <!--별점-->
    <RatingBar
        android:id="@+id/rating_bar"
        style="@style/CustomRatingBar12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:rating="4.5"
        android:isIndicator="true"
        app:layout_constraintStart_toStartOf="@id/tv_nickname"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
        />

    <!--날짜-->
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025.08.13"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="12sp"
        android:textColor="@color/gray2"
        android:layout_marginLeft="6dp"
        app:layout_constraintStart_toEndOf="@id/rating_bar"
        app:layout_constraintTop_toTopOf="@id/rating_bar"
        app:layout_constraintBottom_toBottomOf="@id/rating_bar"
        />

    <!--좋아요 버튼-->
    <LinearLayout
        android:id="@+id/ll_btn_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/btn_like"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/iv_profile"
        app:layout_constraintBottom_toBottomOf="@id/iv_profile"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/tv_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="좋아요 11"
            android:fontFamily="@font/pretendard_medium"
            android:textSize="14sp"
            android:textColor="@color/gray2"
            />
        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_like_unselected"
            android:layout_marginTop="0.7dp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

    <!--리뷰 텍스트-->
    <TextView
        android:id="@+id/tv_reviewText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="흡수력이 좋고 소재가 부드러워서 자극이 없었습니다. 다만 향이 제게는 좀 강한 편이라 교체할 때 거부감이 살짝 있었습니다."
        android:fontFamily="@font/pretendard_light"
        android:textSize="13sp"
        android:textColor="@color/gray2"
        android:background="@drawable/bg_my_review_card"
        android:padding="16dp"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@id/ll_btn_like"
        />

    <!--리뷰 이미지 리스트 (있을 때만 표시)-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_review_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="13dp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/tv_reviewText"
        />


</androidx.constraintlayout.widget.ConstraintLayout>