<?xml version="1.0" encoding="utf-8"?>
<!--회원가입 페이지 2 - 배송정보 입력-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.SignupDeliveryActivity">

    <!--툴바 배치-->
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--스크롤뷰-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Title2"
                style="@style/TextRegisterTitle"
                android:layout_marginTop="32dp"
                android:text="@string/regTitle2"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <!--수령인 섹션-->
            <TextView
                android:id="@+id/tv_receiver"
                style="@style/TextProfileField"
                android:text="@string/receiver"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_Title2" />

            <EditText
                android:id="@+id/et_recipient"
                style="@style/EditTextInput"
                android:layout_marginRight="0dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@id/tv_receiver" />

            <TextView
                android:id="@+id/tv_validReceiver"
                style="@style/TextIsValid"
                android:text="@string/valid_receiver"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_recipient" />

            <!--휴대폰번호 섹션-->
            <TextView
                android:id="@+id/tv_phone"
                style="@style/TextProfileField"
                android:text="@string/phone"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validReceiver" />

            <EditText
                android:id="@+id/et_phone"
                style="@style/EditTextInput"
                android:inputType="phone"
                android:layout_marginRight="0dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@id/tv_phone" />

            <TextView
                android:id="@+id/tv_validPhone"
                style="@style/TextIsValid"
                android:text="@string/valid_phone"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_phone" />

            <!--배송지 섹션-->
            <TextView
                android:id="@+id/tv_address"
                style="@style/TextProfileField"
                android:text="@string/address"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validPhone" />

            <EditText
                android:id="@+id/et_zip"
                style="@style/EditTextInput"
                android:hint="@string/hint_zip"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                app:layout_constraintEnd_toStartOf="@+id/btn_findAddress"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_address" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_findAddress"
                style="@style/BtnCheck"
                android:text="@string/btn_findAddress"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toTopOf="@id/et_zip" />

            <TextView
                android:id="@+id/tv_validZip"
                style="@style/TextIsValid"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_zip" />

            <EditText
                android:id="@+id/et_address"
                style="@style/EditTextInput"
                android:hint="@string/hint_address"
                android:focusable="false"
                android:clickable="false"
                android:cursorVisible="false"
                android:layout_marginTop="2dp"
                android:layout_marginRight="0dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@id/tv_validZip" />

            <TextView
                android:id="@+id/tv_validAddress"
                style="@style/TextIsValid"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_address" />

            <EditText
                android:id="@+id/et_addressDetail"
                style="@style/EditTextInput"
                android:hint="@string/hint_address_detail"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@id/tv_validAddress" />

            <TextView
                android:id="@+id/tv_validAddressDetail"
                style="@style/TextIsValid"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_addressDetail" />

            <!-- 이전 버튼 (회원가입1 페이지로 이동)-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_prevPage"
                style="@style/BtnPrevPage"
                android:text="@string/btn_prev"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_validAddressDetail"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintEnd_toStartOf="@id/btn_nextPage"
                />

            <!-- 다음 버튼 (회원가입3 페이지로 이동)-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nextPage"
                style="@style/BtnNextPage"
                android:text="@string/btn_next"
                android:layout_marginStart="10dp"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toEndOf="@id/btn_prevPage"
                app:layout_constraintTop_toBottomOf="@id/tv_validAddressDetail"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <!--스크롤뷰 가이드라인-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.13" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.87" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!--툴바 높이 가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.15" />


</androidx.constraintlayout.widget.ConstraintLayout>