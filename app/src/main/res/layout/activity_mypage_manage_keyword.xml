<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.mypage.MypageManageKeywordActivity">

    <!--툴바 배치-->
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/guideline_start"
        app:layout_constraintEnd_toEndOf="@id/guideline_end"
        app:layout_constraintTop_toBottomOf="@id/toolBar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <!--키워드 목록 타이틀-->
                <TextView
                    style="@style/TextToolbar"
                    android:textSize="22sp"
                    android:text="클리나"
                    />
                <TextView
                    style="@style/TextMypageBasic"
                    android:textSize="20sp"
                    android:text="님의 키워드"
                    />
            </LinearLayout>

            <!--동적으로 키워드 목록이 추가될 컨테이너-->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexbox_keywords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:flexWrap="wrap"
                app:alignItems="flex_start"
                app:alignContent="flex_start" />

            <!--키워드 설정-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/keyword_setting"
                android:layout_marginTop="33dp"
                android:fontFamily="@font/pretendard_medium"
                android:textSize="20sp"
                android:textColor="@color/gray1"
                />
            <!--민감도-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_keyword_irritationLevel"
                    style="@style/TextSecondaryDefault"
                    android:text="@string/keyword_irritationLevel"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_low"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_normal"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_high"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_delete"
                    />
            </LinearLayout>

            <!--향-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_keyword_scent"
                    style="@style/TextSecondaryDefault"
                    android:text="@string/keyword_scent"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_noScent"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_light"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_normal"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_strong"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_delete"
                    />
            </LinearLayout>

            <!--흡수력-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_keyword_flow"
                    style="@style/TextSecondaryDefault"
                    android:text="@string/keyword_flow"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_light"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_normal"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_high"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_delete"
                    />
            </LinearLayout>

            <!--안전성-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_keyword_safety"
                    style="@style/TextSecondaryDefault"
                    android:text="@string/keyword_safety"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_notImportant"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_normal"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:text="@string/keyword_important"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_delete"
                    />
            </LinearLayout>

            <!--추가 키워드 (예시1)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_keyword_ex1"
                    style="@style/TextSecondaryblock"
                    android:text="@string/keyword_safety"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:textColor="@color/gray4"
                    android:text="@string/keyword_notImportant"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:textColor="@color/gray4"
                    android:text="@string/keyword_normal"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:textColor="@color/gray4"
                    android:text="@string/keyword_important"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_add"
                    />
            </LinearLayout>

            <!--추가 키워드(예시2)-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_keyword_ex2"
                    style="@style/TextSecondaryblock"
                    android:text="@string/keyword_safety"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:textColor="@color/gray4"
                    android:text="@string/keyword_notImportant"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:textColor="@color/gray4"
                    android:text="@string/keyword_normal"
                    />
                <TextView
                    style="@style/keyword_setting_gray"
                    android:textColor="@color/gray4"
                    android:text="@string/keyword_important"
                    />
                <Space
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    />
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/img_add"
                    />
            </LinearLayout>

            <!-- 저장 버튼-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_savePage"
                style="@style/BtnNextPage"
                android:layout_width="match_parent"
                android:text="@string/btn_save"
                />
        </LinearLayout>
    </ScrollView>

    <!--툴바 높이 가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.08"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92"
        />

</androidx.constraintlayout.widget.ConstraintLayout>