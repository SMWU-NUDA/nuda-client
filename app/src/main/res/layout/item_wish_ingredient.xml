<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="70dp"
    android:background="@drawable/bg_my_review_card"
    android:paddingHorizontal="12dp"
    android:paddingBottom="12dp"
    android:paddingTop="10dp"
    android:layout_marginRight="13dp"
    >

    <ImageView
        android:id="@+id/iv_riskLevel"
        android:layout_width="11dp"
        android:layout_height="11dp"
        android:src="@drawable/img_circle"
        app:tint="@color/riskLevel_mint"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/tv_ingredientName"
        android:layout_width="0dp"
        android:layout_height="25dp"
        android:text="아크릴산중합체나트륨염"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="14sp"
        android:textColor="@color/gray1"
        android:maxLines="2"
        android:autoSizeTextType="uniform"
        android:autoSizeMinTextSize="10sp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeStepGranularity="1sp"
        android:ellipsize="none"
        android:layout_marginLeft="11dp"
        app:layout_constraintStart_toEndOf="@id/iv_riskLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_component"
        android:layout_width="35dp"
        android:layout_height="16dp"
        android:text="@string/component_coverLayer"
        android:fontFamily="@font/pretendard_light"
        android:textSize="10sp"
        android:textColor="@color/gray2"
        android:gravity="center"
        android:background="@drawable/bg_mini_component"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/iv_moveToIngredientDetail"
        android:layout_width="7dp"
        android:layout_height="13dp"
        android:src="@drawable/img_right_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/gray3" />
    
</androidx.constraintlayout.widget.ConstraintLayout>