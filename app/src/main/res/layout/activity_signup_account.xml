<?xml version="1.0" encoding="utf-8"?>
<!--회원가입 페이지 1 - 기본정보 입력-->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.SignupAccountActivity">

    <!--툴바 배치-->
    <include
        android:id="@+id/toolBar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/guideline1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--스크롤뷰-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolBar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_Title1"
                style="@style/TextRegisterTitle"
                android:layout_marginTop="32dp"
                android:text="@string/regTitle1"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toTopOf="parent" />

            <!--닉네임 섹션-->
            <TextView
                android:id="@+id/tv_nickname"
                style="@style/TextProfileField"
                android:text="@string/nickname"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_Title1" />

            <EditText
                android:id="@+id/et_nickname"
                style="@style/EditTextInput"
                app:layout_constraintEnd_toStartOf="@+id/btn_checkNickname"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_nickname" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_checkNickname"
                style="@style/BtnCheck"
                android:text="@string/btn_checkDuplicate"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toTopOf="@id/et_nickname" />

            <TextView
                android:id="@+id/tv_validNickname"
                style="@style/TextIsValid"
                android:text="@string/valid_nickname"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_nickname" />

            <TextView
                android:id="@+id/tv_duplicateNickname"
                style="@style/TextIsValid"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validNickname" />

            <!--아이디 섹션-->
            <TextView
                android:id="@+id/tv_id"
                style="@style/TextProfileField"
                android:text="@string/id"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validNickname" />

            <EditText
                android:id="@+id/et_username"
                style="@style/EditTextInput"
                app:layout_constraintEnd_toStartOf="@+id/btn_checkId"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_id" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_checkId"
                style="@style/BtnCheck"
                android:text="@string/btn_checkDuplicate"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toTopOf="@id/et_username" />

            <TextView
                android:id="@+id/tv_validId"
                style="@style/TextIsValid"
                android:text="@string/valid_id"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_username" />

            <TextView
                android:id="@+id/tv_duplicateId"
                style="@style/TextIsValid"
                android:layout_marginTop="2dp"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validId" />

            <!--비밀번호 섹션-->
            <TextView
                android:id="@+id/tv_pw"
                style="@style/TextProfileField"
                android:text="@string/pw"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validId" />

            <EditText
                android:id="@+id/et_pw"
                style="@style/EditTextInput"
                android:inputType="textPassword"
                android:layout_marginRight="0dp"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_pw" />

            <ImageView
                android:id="@+id/iv_visiblePw"
                style="@style/ImageBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/img_visible"
                app:layout_constraintBottom_toBottomOf="@id/et_pw"
                app:layout_constraintEnd_toEndOf="@id/et_pw"
                app:layout_constraintTop_toTopOf="@id/et_pw" />

            <TextView
                android:id="@+id/tv_validPw1"
                style="@style/TextIsValid"
                android:text="@string/valid_pw1"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_pw" />

            <TextView
                android:id="@+id/tv_validPw2"
                style="@style/TextIsValid"
                android:layout_marginTop="5dp"
                android:text="@string/valid_pw2"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validPw1" />

            <!--비밀번호 확인 섹션-->
            <TextView
                android:id="@+id/tv_pwCheck"
                style="@style/TextProfileField"
                android:text="@string/pw_check"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validPw2" />

            <EditText
                android:id="@+id/et_pwCheck"
                style="@style/EditTextInput"
                android:inputType="textPassword"
                android:layout_marginRight="0dp"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_pwCheck" />

            <ImageView
                android:id="@+id/iv_visiblePwCheck"
                style="@style/ImageBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/img_visible"
                app:layout_constraintBottom_toBottomOf="@id/et_pwCheck"
                app:layout_constraintEnd_toEndOf="@id/et_pwCheck"
                app:layout_constraintTop_toTopOf="@id/et_pwCheck" />

            <TextView
                android:id="@+id/tv_validPwCheck"
                style="@style/TextIsValid"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_pwCheck" />

            <!--이메일 섹션-->
            <TextView
                android:id="@+id/tv_email"
                style="@style/TextProfileField"
                android:text="@string/email"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validPwCheck" />

            <EditText
                android:id="@+id/et_email"
                style="@style/EditTextInput"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:imeOptions="flagForceAscii"
                app:layout_constraintEnd_toStartOf="@+id/btn_sendEmail"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_email" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_sendEmail"
                style="@style/BtnCheck"
                android:text="@string/btn_send"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toTopOf="@id/et_email" />

            <TextView
                android:id="@+id/tv_validEmail"
                style="@style/TextIsValid"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_email" />

            <EditText
                android:id="@+id/et_emailCertify"
                style="@style/EditTextInput"
                android:hint="@string/hint_email_certify"
                app:layout_constraintEnd_toStartOf="@+id/btn_certifyEmail"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validEmail" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_certifyEmail"
                style="@style/BtnCheck"
                android:text="@string/btn_confirm"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline4"
                app:layout_constraintTop_toTopOf="@id/et_emailCertify" />

            <TextView
                android:id="@+id/tv_validEmailCertify"
                style="@style/TextIsValid"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/et_emailCertify" />

            <TextView
                android:id="@+id/tv_timer"
                style="@style/TextIsValid"
                android:textColor="@color/green"
                android:layout_marginRight="5dp"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintTop_toBottomOf="@id/btn_certifyEmail"
                />

            <!-- 다음 버튼 (회원가입2 페이지로 이동)-->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_nextPage"
                style="@style/BtnNextPage"
                android:text="@string/btn_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/guideline3"
                app:layout_constraintStart_toStartOf="@id/guideline2"
                app:layout_constraintTop_toBottomOf="@id/tv_validEmailCertify" />


            <!--스크롤뷰 가이드라인-->
            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.65" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <!--    툴바 높이 가이드라인-->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.11" />

</androidx.constraintlayout.widget.ConstraintLayout>