<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="17dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--랭킹 순위-->
    <TextView
        android:id="@+id/tv_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/product_rank"
        android:fontFamily="@font/pretendard_bold"
        android:textSize="20sp"
        android:textColor="@color/gray1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        />

    <Space
        android:id="@+id/space"
        android:layout_width="16dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@id/tv_rank"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible"
        />

    <!--상품 이미지-->
    <ImageView
        android:id="@+id/iv_product"
        style="@style/ImageProduct"
        android:clipToOutline="true"
        android:src="@drawable/image_product"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/space"
        />

    <!--브랜드명-->
    <TextView
        android:id="@+id/tv_productBrand"
        style="@style/TextProductBrand"
        android:text="@string/product_brand"
        app:layout_constraintStart_toEndOf="@id/iv_product"
        app:layout_constraintTop_toTopOf="parent"
        />

    <!--상품명-->
    <TextView
        android:id="@+id/tv_productName"
        style="@style/TextProductName"
        android:text="@string/product_name"
        app:layout_constraintTop_toBottomOf="@id/tv_productBrand"
        app:layout_constraintStart_toStartOf="@id/tv_productBrand"
        />

    <!--성분 리스트-->
    <TextView
        android:id="@+id/tv_productIngredient"
        style="@style/TextProductIngredient"
        android:text="@string/product_ingredient_list"
        app:layout_constraintTop_toBottomOf="@id/tv_productName"
        app:layout_constraintStart_toStartOf="@id/tv_productBrand"
        />

    <ImageView
        android:id="@+id/iv_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_star_12"
        android:layout_marginTop="9dp"
        app:layout_constraintBottom_toBottomOf="@id/iv_product"
        app:layout_constraintStart_toStartOf="@id/tv_productBrand"
        />

    <!--별점 및 리뷰 수-->
    <TextView
        android:id="@+id/tv_ratingAndReview"
        style="@style/TextProductStarandReview"
        android:text="@string/product_star"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="@id/iv_star"
        app:layout_constraintBottom_toBottomOf="@id/iv_star"
        app:layout_constraintStart_toEndOf="@id/iv_star"
        />

    <!--가격-->
    <TextView
        android:id="@+id/tv_productPrice"
        style="@style/TextProductPrice"
        android:text="@string/product_price"
        app:layout_constraintTop_toBottomOf="@id/tv_productIngredient"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!--구분선-->
    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray5"
        android:layout_marginTop="13dp"
        app:layout_constraintTop_toBottomOf="@id/tv_productPrice"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>