<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginEnd="17dp">

    <!--상품 이미지-->
    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/image_product"
        android:background="@drawable/img_product"
        android:clipToOutline="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <!--브랜드-->
    <TextView
        android:id="@+id/tv_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="좋은느낌"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="12sp"
        android:textColor="@color/gray3"
        android:layout_marginTop="10dp"
        />

    <!--상품 이름-->
    <TextView
        android:id="@+id/tv_productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유기농 100% 순면생리대"
        android:fontFamily="@font/pretendard_medium"
        android:textSize="13sp"
        android:textColor="@color/gray1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="2dp">
        <ImageView
            android:id="@+id/iv_star"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/img_star_12" />

        <TextView
            android:id="@+id/tv_ratingAndReview"
            style="@style/TextProductStarandReview"
            android:text="@string/product_star"
            android:layout_marginLeft="1dp"/>

    </LinearLayout>



</LinearLayout>